<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_blue_500</item>
        <item name="colorPrimaryDark">@color/md_blue_700</item>
        <item name="android:navigationBarColor">@color/md_blue_500</item>
        <item name="colorAccent">@color/md_pink_400</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/md_blue_50</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="Theme.Base" parent="AppTheme"/>
    <style name="ToolbarTheme" parent="Theme.Base">
        <item name="android:textColorPrimary">@color/md_blue_500</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/md_pink_400</item>
    </style>
</resources>